{
    "openapi":"3.0.0",
    "info":{
       "title":"Trello REST API",
       "version":"0.0.1"
    },
    "servers":[
       {
          "url":"https://api.trello.com/1"
       }
    ],
    "components":{
       "schemas":{
          "Action":{
             "type":"object",
             "properties":{
                "data":{
                   "type":"object",
                   "properties":{
                      "card":{
                         "type":"object",
                         "properties":{
                            "id":{
                               "type":"string",
                               "$ref":"#/components/schemas/TrelloID"
                            }
                         }
                      },
                      "board":{
                         "type":"object",
                         "properties":{
                            "id":{
                               "type":"string",
                               "$ref":"#/components/schemas/TrelloID"
                            }
                         }
                      }
                   }
                }
             }
          },
          "TrelloID":{
             "type":"string",
             "pattern":"^[0-9a-fA-F]{24}$",
             "example":"5abbe4b7ddc1b351ef961414"
          }
       }
    },
    "paths":{
       "/actions/{id}":{
          "parameters":[
             {
                "name":"id",
                "in":"path",
                "description":"The ID of the Action",
                "required":true,
                "schema":{
                   "$ref":"#/components/schemas/TrelloID"
                }
             }
          ],
          "get":{
             "responses":{
                "200":{
                   "description":"Success"
                }
             }
          }
       }
    }
 }
